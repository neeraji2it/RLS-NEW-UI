        <%= link_to_add_fields image_tag("add.png") , f,:images %> 
      </div>
    <% end %>
    <div class="control-group">
      <label class="control-label" for="inputPropertyNotes">
        Description
        <span class="form-required" title="This field is required.">*</span>
      </label>
      <div class="controls">
        <%=  f.text_area :description,:id=>"inputPropertyNotes",:style=>"width:87%;" %>
      </div><!-- /.controls -->
    </div><!-- /.control-group -->


    <div class="bathrooms control-group" style="float:left;width:345px;"id="amenities">
