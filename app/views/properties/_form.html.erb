      <label class="control-label" for="inputPropertyFirstName">
        Your name
        <span class="form-required" title="This field is required.">*</span>
      </label>
      <div class="controls">
        <%= f.text_field :name,:id=>"inputPropertyFirstName" %>
      </div><!-- /.controls -->
    </div><!-- /.control-group -->

    <div class="control-group">
      <label class="control-label" for="inputPropertyFirstName">
        Your Email
        <span class="form-required" title="This field is required.">*</span>
      </label>
      <div class="controls">
        <%= f.email_field :email,:id=>"inputPropertyFirstName",:style=>"height: 26px;width: 51%;" %>
      </div><!-- /.controls -->
    </div><!-- /.control-group -->

    <div class="control-group">
      <label class="control-label" for="inputPropertyFirstName">
        Your MobileNo.
        <span class="form-required" title="This field is required.">*</span>
      </label>
      <div class="controls" style="width:55%;">
        <%= f.text_field :mobile,:id=>"inputPropertyFirstName" ,:class=>"numbersOnly"%>
      </div><!-- /.controls -->
    </div><!-- /.control-group -->
    <%= f.check_box :terms_of_service %>I Agree To <a href="#myModal2" role="button" data-toggle="modal" style="text-decoration:none;"> Terms And Conditions</a>
    <div class="control-group">
      <%= f.submit "Submit" , :class=>"btn btn-primary arrow-right",:style=>"margin-left: 122px;"%>
    </div>
  </div><!-- /.span4 -->
</div><!-- /.row -->




<script>
  function change_form(th) {
    if ($(th).val() === 'Apartment') {
      $("#land").hide();
      $("#radio_buttons1").show();
      $("#rooms").show();
      $("#amenities").show();
      $("#furnish").show();
      $("#area").show();
    } else if ($(th).val() === 'Villa') {
      $("#land").hide();
      $("#radio_buttons1").show();
      $("#rooms").show();
      $("#amenities").show();
      $("#furnish").show();
      $("#area").show();
    } else if ($(th).val() === 'Land') {
      $("#land").show();
      $("#rooms").hide();
      $("#amenities").hide();
      $("#furnish").hide();
      $("#radio_buttons1").hide();
      $("#area").show();
    } else if ($(th).val() === 'OfficeCommercial') {
      $("#land").hide();
      $("#rooms").hide();
      $("#radio_buttons1").show();
      $("#amenities").hide();
      $("#furnish").show();
      $("#area").show();
    } else {
      $("#land").hide();
      $("#rooms").hide();
      $("#amenities").hide();
      $("#furnish").hide();
      $("#area").hide();
      $("#radio_buttons1").show();
    }
  }
  function change_form1(th) {
    if ($(th).val() === 'Sale') {
      $("#accomdiation").hide();
       $("#creatiwa").show();
      alert("This Property is valid only for 15days.If you want to continue please contact us.");
    }
    else {
       $("#creatiwa").hide();
      if ($("#property_property_type").val() === "PG/Hostel") {
        $("#accomdiation").show();
      }
    }
  }
  $(document).ready(function() {
    change_form($("#property_property_type"));
  });

  jQuery('.numbersOnly').keyup(function() {
    this.value = this.value.replace(/[^0-9\.]/g, '');
  });
</script>


