    <div id="main" class="span9">

      <h1 class="page-header">Properties</h1>

      <div class="clearfix">
        <script type="text/javascript">
          jQuery(document).ready(function($) {
            $('select[name=filter_sort_by]').change(function() {
              $('form.form-sort').submit();
            });

            $('select[name=filter_order]').change(function() {
              $('form.form-sort').submit();
            });
          });
        </script>

        <div class="properties-rows">
          <div class="filter-wrapper">
            <div class="filter pull-right">
              <form action="http://wp.properta.byaviators.com/properties/" method="get" class="form-sort form-horizontal pull-right">
                <div class="pager pull-right">
                  <%= will_paginate(@properties, :page_links => false, :next_label => "<i class='icon icon-normal-right-arrow-small'></i>", :previous_label => "<i class='icon icon-normal-left-arrow-small'></i>", :class => "", :container => "") %>
                </div><!-- /.pager -->

                <div class="control-group pull-right">
                  <div class="controls">
                    <select name="filter_sort_by" id="inputSortBy">
                      <option value="price" >Price</option>
                      <option value="published" >Published</option>
                    </select>
                  </div>
                </div>

                <div class="control-group pull-right">
                  <div class="controls">
                    <select id="inputOrder" name="filter_order" class="chosen">
                      <option value="DESC" >Descending</option>
                      <option value="ASC" >Ascending</option>
                    </select>
                  </div><!-- /.controls -->
                </div><!-- /.control-group -->
              </form>

            </div><!-- /.filter -->
          </div>
        </div><!-- /.properties-rows -->       
      </div>



      <div class="properties-rows">
        <div class="row">
          <% @properties.each do |property|  %>
            <div class="property span9">
              <div class="row">
                <div class="span3">
                  <div class="image">
                    <div class="content">
                      <a href="<%= update_view_count_property_path(property.id) %>">
                        <% property.images.limit(1).each do |image| %>
                          <%= image_tag (image.image),:width=>"570", :height=>"425"  %>
                        <% end%> 
                      </a>
                    </div><!-- /.content -->
                  </div><!-- /.image -->
                </div>

                <div class="body span6">
                  <div class="title-price row">
                    <div class="title span4">
                      <h2><%= link_to property.title, update_view_count_property_path(property.id) %></h2>
                    </div><!-- /.title -->

                    <div class="price">
                      <%= property.price %> INR
                    </div><!-- /.price -->
                  </div><!-- /.title -->

                  <div class="location"><%= property.location %></div><!-- /.location -->

                  <div class="body"> 
                    <p><%= property.description %></p>
                  </div><!-- /.body -->

                  <div class="property-info clearfix">

                    <div class="bedrooms">
                      <i class="icon icon-normal-bed"></i>
                      <%= property.no_of_rooms %>
                    </div><!-- /.bedrooms -->

                    <div class="more-info">
                      <%= link_to "More Info<i class='icon icon-normal-right-arrow-circle'></i>".html_safe, update_view_count_property_path(property.id) %>
                    </div>
                  </div><!-- /.info -->
                </div><!-- /.body -->
              </div><!-- /.row -->
            </div><!-- /.property -->
          <% end %>
        </div><!-- /.row -->
