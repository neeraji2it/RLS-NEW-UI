<div class="container">
  <div class="row">
    <div class="sidebar span3">
      <h2>Search Properties</h2>
      <div class="property-filter widget">
        <div class="content">
          <%= render :partial=>"index_search" %>
        </div>
        <!-- /.content -->
      </div><!-- /.property-filter -->
      <div id="partners_widget-2" class="widget partners">

        <h2>Partners In Development</h2>

        <div class="partners">
          <div class="row">
            <div class="span3">
              <div class="partner">
                <a href="http://www.dine-media.in/">
                  <img width="270" height="70" src="/assets/logo.png" class="attachment-post-thumbnail wp-post-image" alt="themeforest" />
                </a>
              </div>
            </div><!-- /.span3 -->
          </div><!-- /.row -->
        </div><!-- /.partners -->
      </div><div id="mostrecentproperties_widget-2" class="widget properties">

        <h2>Most Recent Properties</h2>

        <div class="content">
          <%= render :partial=>"home/most_recent_properties" ,:locals => {:properties => @properties}%>
        </div><!-- /.content -->

      </div>    
      <div id="agencies_widget-2" class="widget agencies">

        <h2>Agencies</h2>

        <div class="content">
          <div class="agency clearfix">
            <div class="header">
              <div class="image">
                <a href="http://www.creatiwads.in/">
                  <img width="270" height="70" src="/assets/clogo.png" class="attachment-post-thumbnail wp-post-image" alt="themeforest" />
                </a>
              </div>
              <!-- /.image -->

              <div class="info">
                <h2>Beverly Hills Real Estate</h2>

                <div class="properties-count">
                  <span class="number">2</span> properties
                </div>
                <!-- /.properties-count -->

                <a href="../agencies/beverly-hills-real-estate-agent/index.html" class="btn">View profile</a>
              </div>
              <!-- /.info -->
            </div>
            <!-- /.header -->

            <div class="address">
              4265 Broadway Avenue<br />
              Johnson City, TN 37601
            </div><!-- /.address -->

            <div class="email">
              <a href="index686a.html?id=130">Contact</a>
            </div><!-- /.email -->

            <div class="phone">
              (401) 852-987
            </div><!-- /.phone -->

          </div><!-- /.agency -->
          <div class="agency clearfix">
            <div class="header">
              <div class="image">
                <a href="../agencies/colombia-real-estate-for-sale/index.html">
                  <img src="/assets/themes/properta/assets/img/agency-small-tmp.png" alt="Colombia Real Estate">
                </a>
              </div>
              <!-- /.image -->

              <div class="info">
                <h2>Colombia Real Estate</h2>

                <div class="properties-count">
                  <span class="number">6</span> properties
                </div>
                <!-- /.properties-count -->

                <a href="../agencies/colombia-real-estate-for-sale/index.html" class="btn">View profile</a>
              </div>
              <!-- /.info -->
            </div>
            <!-- /.header -->

            <div class="address">
              485 Shinn Avenue<br />
              Pittsburgh, PA 15222
            </div><!-- /.address -->

            <div class="email">
              <a href="index46f5.html?id=129">Contact</a>
            </div><!-- /.email -->

            <div class="phone">
              (401) 458-965
            </div><!-- /.phone -->

          </div><!-- /.agency -->
        </div><!-- /.content -->

      </div>


    </div><!-- /#sidebar -->

    <div id="main" class="span9">
      <h1 class="page-header">Search Results for: <%= @param %> </h1>

      <div class="properties-rows">
        <div class="row">
          <% @properties_quick.each do |property|  %>
            <div class="property span9">
              <div class="row">
                <div class="span3">
                  <div class="image">
                    <div class="content">
                      <a href="<%= update_view_count_property_path(property.id) %>">
                        <% property.images.limit(1).each do |image| %>
                          <%= image_tag (image.image),:width=>"570", :height=>"425"  %>
                        <% end%> 
                      </a>
                    </div><!-- /.content -->
                  </div><!-- /.image -->
                </div>

                <div class="body span6">
                  <div class="title-price row">
                    <div class="title span4">
                      <h2><%= link_to property.title, update_view_count_property_path(property.id) %></h2>
                    </div><!-- /.title -->

                    <div class="price">
                      <%= property.price %> INR
                    </div><!-- /.price -->
                  </div><!-- /.title -->

                  <div class="location"><%= property.location %></div><!-- /.location -->

                  <div class="body"> 
                    <p><%= property.description %></p>
                  </div><!-- /.body -->

                  <div class="property-info clearfix">

                    <% if property.property_type=='Apartment' || property.property_type=='Villa'%>
                      <div class="bedrooms">
                        <i class="icon icon-normal-bed"></i>
                        <%= property.no_of_rooms %>
                      </div><!-- /.bedrooms -->

                      <div class="bathrooms">
                        <i class="icon icon-normal-shower"></i>
                        <%= property.bath_rooms %>
                      </div><!-- /.bathrooms -->
                    <% end %>
                    <div class="more-info">
                      <%= link_to "More Info<i class='icon icon-normal-right-arrow-circle'></i>".html_safe, update_view_count_property_path(property.id) %>
                    </div>
                  </div><!-- /.info -->
                </div><!-- /.body -->
              </div><!-- /.row -->
            </div><!-- /.property -->
          <% end %>
        </div><!-- /.row -->
      </div><!-- /.properties-grid -->

      <div class="pagination pagination-centered">
        <%= will_paginate(@properties_quick) %>
      </div>


    </div><!-- /#main -->

  </div><!-- /.row -->
</div><!-- /.container -->
