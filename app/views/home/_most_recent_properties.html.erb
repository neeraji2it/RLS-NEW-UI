<% properties.limit(3).each do |property| %>
  <div class="property clearfix">
    <div class="image">
      <a href='#myModal' onclick="javascript:$('#property_id').val('<%=  property.id %>')" role="button" data-toggle="modal">
        <% property.images.limit(1).each do |image| %>
          <%= image_tag (image.image),:width=>"1680", :height=>"1050"  %>
        <% end%> 
      </a>
    </div><!-- /.image -->

    <div class="wrapper">
      <div class="title">
        <h3><%= link_to property.title, "#myModal", :onclick=>"javascript:$('#property_id').val('#{property.id}')",  :role=>"button", "data-toggle"=>"modal" %></h3>
      </div><!-- /.title -->

      <div class="location"><%= property.location %></div><!-- /.location -->

      <div class="price">
        <%= property.price %> INR                                      
      </div><!-- /.price -->
    </div><!-- /.wrapper -->
  </div><!-- /.property -->

  <div class="property-info clearfix">
    <div class="area">
      <i class="icon icon-normal-cursor-scale-up"></i>
      <%= property.area %>m<sup>2</sup>
    </div><!-- /.area -->

    <div class="bedrooms">
      <i class="icon icon-normal-bed"></i>
      <%= property.no_of_rooms %>
    </div><!-- /.bedrooms -->

  </div><!-- /.info -->
<% end %>